@model WebEscuelaMVC.Models.Aula

@{
    ViewData["Title"] = "Registrar Aula";
}

    <h1>Agregar aula</h1>

    @using (Html.BeginForm("Create", "Aula", FormMethod.Post))
    {
        <p>
            @Html.LabelFor(model => model.Numero)
            @Html.TextBoxFor(model => model.Numero)
            @Html.ValidationMessageFor(model => model.Numero)
        </p>

        <p>
            @Html.LabelFor(model => model.Estado)
            @Html.TextBoxFor(model => model.Estado)
            @Html.ValidationMessageFor(model => model.Estado)
        </p>

        <input type="submit" action="Create" />

        @Html.ActionLink("Volver a ver aulas", "Index", "Aula")

    }

